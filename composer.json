{
    "name": "mileschou/pherm",
    "description": "A command line terminal utility in PHP",
    "keywords": [
        "cli",
        "console",
        "terminal"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Miles Chou",
            "email": "jangconan@gmail.com"
        }
    ],
    "require": {
        "php": "^7.2 | ^8.0",
        "ext-posix": "*",
        "psr/container": "^1.0",
        "symfony/console": "^4 | ^5"
    },
    "require-dev": {
        "amphp/amp": "^2.4",
        "illuminate/container": "^7.19 | ^8",
        "mockery/mockery": "^1.3",
        "phpunit/phpunit": "^8.5 | ^9",
        "psy/psysh": "^0.10",
        "squizlabs/php_codesniffer": "^3.5.7"
    },
    "autoload": {
        "psr-4": {
            "MilesChou\\Pherm\\": "src/Pherm"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    }
}
