{
    "name": "mileschou/pherm",
    "description": "A command line terminal utility in PHP",
    "keywords": [
        "cli",
        "console",
        "terminal"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Miles Chou",
            "email": "jangconan@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.2",
        "ext-posix": "*",
        "psr/container": "^1.0"
    },
    "require-dev": {
        "amphp/amp": "^2.4",
        "codacy/coverage": "^1.4",
        "illuminate/container": "^6",
        "mockery/mockery": "^1.3",
        "phpstan/phpstan": "^0.11.19",
        "phpunit/phpunit": "^8.4",
        "psy/psysh": "^0.9.9",
        "squizlabs/php_codesniffer": "^3.5"
    },
    "autoload": {
        "psr-4": {
            "MilesChou\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests"
        }
    },
    "config": {
        "sort-packages": true
    }
}
