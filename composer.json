{
    "name": "mileschou/pherm",
    "description": "A command line terminal utility in PHP",
    "keywords": [
        "cli",
        "console",
        "terminal"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Miles Chou",
            "email": "jangconan@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.1",
        "ext-posix": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.1",
        "squizlabs/php_codesniffer": "^3.4",
        "phpstan/phpstan": "^0.9.2",
        "php-coveralls/php-coveralls": "^2.1",
        "psy/psysh": "^0.9.9",
        "mockery/mockery": "^1.2"
    },
    "autoload": {
        "psr-4": {
            "MilesChou\\Pherm\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests"
        }
    }
}
